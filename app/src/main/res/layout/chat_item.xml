<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/_0ca5ea"
        android:padding="8dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        tools:targetApi="lollipop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_chat_text_view"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </LinearLayout>


    <!--
    **********************************************************
    -->
    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_view"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#7CB342"
        android:padding="8dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        tools:targetApi="lollipop"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_chat_text_view"
            android:textColor="@color/white"
            android:textSize="18sp"
        />

    </LinearLayout>
</RelativeLayout>
    <!--
        We use RelativeLayout for managing multiple views in our XML.
        Various attributes define the relationship of views to each other or the parent layout.
    -->

